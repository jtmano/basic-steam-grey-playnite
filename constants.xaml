<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
                    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
                    xmlns:i="clr-namespace:System.Windows.Interactivity;assembly=System.Windows.Interactivity"
                    xmlns:sys="clr-namespace:System;assembly=mscorlib"
                    mc:Ignorable="d">

    <!-- =====================================================
         MOTIVA SANS FONT FAMILY (SteamOS Font)
         ===================================================== -->
    <FontFamily x:Key="FontMotivaSans">/Fonts/MotivaSansRegular.woff.ttf#Motiva Sans</FontFamily>
    <FontFamily x:Key="FontMotivaSansMedium">/Fonts/MotivaSansMedium.woff.ttf#Motiva Sans</FontFamily>
    <FontFamily x:Key="FontMotivaSansBold">/Fonts/MotivaSansBold.woff.ttf#Motiva Sans</FontFamily>
    <FontFamily x:Key="FontMotivaSansLight">/Fonts/MotivaSansLight.woff.ttf#Motiva Sans</FontFamily>

    <!-- =====================================================
         STEAM DECK / SteamOS COLOR PALETTE
         ===================================================== -->
    
    <!-- Base Colors -->
    <Color x:Key="BlackColor">#FF121212</Color>
    <Color x:Key="WhiteColor">#FFFFFFFF</Color>
    <Color x:Key="GlyphColor">#FF1a9fff</Color>
    <Color x:Key="GlyphLightColor">#FF66c0f4</Color>
    <Color x:Key="SelectionLightColor">#FF66c0f4</Color>
    <Color x:Key="OverlayColor">#DD121212</Color>
    
    <!-- Control Background Colors - Neutral Grey -->
    <Color x:Key="ControlBackgroundColor">#FF2a2a2a</Color>
    <Color x:Key="ControlBackgroundColorDark">#FF1a1a1a</Color>

    <!-- Text Colors -->
    <Color x:Key="TextColor">#FFFFFFFF</Color>
    <Color x:Key="TextColorDark">#FF8b929a</Color>

    <!-- =====================================================
         BRUSHES
         ===================================================== -->
    
    <SolidColorBrush x:Key="TextBrush" Color="{DynamicResource TextColor}" />
    <SolidColorBrush x:Key="TextBrushDark" Color="{DynamicResource TextColorDark}" />
    <SolidColorBrush x:Key="GlyphBrush" Color="{DynamicResource GlyphColor}" />
    <SolidColorBrush x:Key="GlyphLightBrush" Color="{DynamicResource GlyphLightColor}" />
    <SolidColorBrush x:Key="ControlBackgroundBrush" Color="{DynamicResource ControlBackgroundColor}" />
    <SolidColorBrush x:Key="ControlBackgroundDarkBrush" Color="{DynamicResource ControlBackgroundColorDark}" />
    <SolidColorBrush x:Key="SelectionLightBrush" Color="{DynamicResource SelectionLightColor}" />
    <SolidColorBrush x:Key="OverlayBrush" Color="{DynamicResource OverlayColor}" />
    <SolidColorBrush x:Key="CheckBoxCheckMarkBkBrush" Color="{DynamicResource ControlBackgroundColorDark}" />
    <SolidColorBrush x:Key="WarningBrush" Color="#ffc82c" />

    <!-- =====================================================
         FONT SIZES
         ===================================================== -->
    
    <sys:Double x:Key="FontSizeSmall">18</sys:Double>
    <sys:Double x:Key="FontSize">22</sys:Double>
    <sys:Double x:Key="FilterPanelWidth">300</sys:Double>
    <GridLength x:Key="ProgressWindowWidth">640</GridLength>
    
    <!-- =====================================================
         TEXT STYLE
         ===================================================== -->
    
    <Style x:Key="TextBlockBaseStyle" TargetType="TextBlock">
        <Setter Property="FontSize" Value="{DynamicResource FontSize}" />
        <Setter Property="FontFamily" Value="{DynamicResource FontTitilliumWebLight}" />
        <Setter Property="Foreground" Value="{DynamicResource TextBrush}" />
    </Style>

    <!-- =====================================================
         STEAM DECK GRADIENT BACKGROUNDS
         ===================================================== -->

    <!-- Main Background - Dark grey radial gradient -->
    <RadialGradientBrush x:Key="MainBackgourndBrush" GradientOrigin="0.5,0.1" Center="0.5,0.2" RadiusX="0.5" RadiusY="0.7">
        <RadialGradientBrush.GradientStops>
            <GradientStop Color="#FF252525" Offset="0" />
            <GradientStop Color="#FF121212" Offset="1.0" />
        </RadialGradientBrush.GradientStops>
    </RadialGradientBrush>

    <!-- Top Bar Background -->
    <LinearGradientBrush x:Key="TopBarBackgroundBrush" StartPoint="-0.5,0.5" EndPoint="1,0.5">
        <GradientStop Color="#FF252525" Offset="0"/>
        <GradientStop Color="#CC1a1a1a" Offset="1.0"/>
    </LinearGradientBrush>

    <!-- Bottom Bar Background -->
    <LinearGradientBrush x:Key="BottomBarBackgroundBrush" StartPoint="-0.5,0.5" EndPoint="1.5,1">
        <GradientStop Color="#FF252525" Offset="0"/>
        <GradientStop Color="#CC1a1a1a" Offset="1.0"/>
    </LinearGradientBrush>

    <!-- Overlay Menu Background -->
    <LinearGradientBrush x:Key="OverlayMenuBackgroundBrush" StartPoint="0.5,0" EndPoint="0.5,1.5">
        <GradientStop Color="#FF252525" Offset="0"/>
        <GradientStop Color="#FF121212" Offset="1.0"/>
    </LinearGradientBrush>

    <!-- Selection Brush - Steam Blue accent -->
    <LinearGradientBrush x:Key="SelectionBrush" StartPoint="0.5,-0.5" EndPoint="1,1.5">
        <GradientStop Color="{DynamicResource GlyphColor}" Offset="0"/>
        <GradientStop Color="{DynamicResource GlyphLightColor}" Offset="1.0"/>
    </LinearGradientBrush>

    <!-- Game Details Background -->
    <LinearGradientBrush x:Key="GameDetailsBackgroundBrush" StartPoint="0.5,0" EndPoint="0.5,0.4">
        <GradientStop Color="#00252525" Offset="0.0"/>
        <GradientStop Color="#EE121212" Offset="0.8"/>
    </LinearGradientBrush>

</ResourceDictionary>