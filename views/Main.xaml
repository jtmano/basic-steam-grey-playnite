<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
                    xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
                    mc:Ignorable="d">

    <Style TargetType="{x:Type Main}">
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="{x:Type Main}">
                    <Grid x:Name="PART_MainHost"
                          d:DesignWidth="{StaticResource DesignWidth}"
                          d:DesignHeight="{StaticResource DesignHeight}"
                          d:DataContext="{x:Static DesignMainViewModel.DesignIntance}">
                        <Grid x:Name="PART_ViewHost" Background="{DynamicResource MainBackgourndBrush}">
                            <Grid.RowDefinitions>
                                <RowDefinition Height="70" />  <!-- Header -->
                                <RowDefinition Height="*" />   <!-- Content -->
                                <RowDefinition Height="60" />  <!-- Footer -->
                            </Grid.RowDefinitions>

                            <FadeImage x:Name="PART_ImageBackground" Grid.RowSpan="3"
                                       HorizontalAlignment="Center" VerticalAlignment="Top"/>

                            <!-- ==================== STEAMDECK HEADER ==================== -->
                            <Grid Grid.Row="0" Background="{DynamicResource TopBarBackgroundBrush}">
                                
                                <!-- Category Tabs - Centered across full width -->
                                <FilterPresetSelector x:Name="PART_FilterPresetSelector" 
                                                      VerticalAlignment="Center"
                                                      HorizontalAlignment="Center"/>
                                
                                <!-- Left side overlay: L1 bumper -->
                                <Border Background="{DynamicResource ControlBackgroundBrush}"
                                        CornerRadius="8" Margin="12,0,0,0"
                                        VerticalAlignment="Center" HorizontalAlignment="Left"
                                        Padding="10,5">
                                    <TextBlock Text="LB" FontSize="15" FontWeight="Bold"
                                               Foreground="{DynamicResource TextBrush}"
                                               VerticalAlignment="Center"/>
                                </Border>
                                
                                <!-- Right side overlay: Status icons and buttons -->
                                <StackPanel Orientation="Horizontal" 
                                            HorizontalAlignment="Right" 
                                            VerticalAlignment="Center"
                                            Margin="0,0,12,0">
                                    
                                    <!-- Search Button -->
                                    <ButtonEx x:Name="PART_ButtonSearch" 
                                              VerticalAlignment="Center"
                                              Style="{DynamicResource ButtonTopMenu}"
                                              Margin="0,0,10,0" Height="36" MinWidth="36">
                                        <ButtonEx.Content>
                                            <TextBlock Text="&#xed11;" FontFamily="{StaticResource FontIcoFont}"
                                                       HorizontalAlignment="Center" VerticalAlignment="Center"
                                                       Foreground="{DynamicResource TextBrush}" FontSize="22" />
                                        </ButtonEx.Content>
                                    </ButtonEx>
                                    
                                    <!-- Battery Status Icon -->
                                    <ContentControl x:Name="PART_ElemBatteryStatus" Focusable="False" 
                                                    FontSize="28"
                                                    VerticalAlignment="Center" 
                                                    Margin="5,0,5,0">
                                        <ContentControl.Style>
                                            <Style TargetType="ContentControl">
                                                <Setter Property="Foreground" Value="{DynamicResource GlyphBrush}" />
                                                <Style.Triggers>
                                                    <DataTrigger Binding="{Binding PowerStatus.Charge}" Value="Critical">
                                                        <Setter Property="Content" Value="{DynamicResource BatteryStatusCritical}" />
                                                        <Setter Property="Foreground" Value="#ff4f4f" />
                                                    </DataTrigger>
                                                    <DataTrigger Binding="{Binding PowerStatus.Charge}" Value="Low">
                                                        <Setter Property="Content" Value="{DynamicResource BatteryStatusLow}" />
                                                        <Setter Property="Foreground" Value="#ffc82c" />
                                                    </DataTrigger>
                                                    <DataTrigger Binding="{Binding PowerStatus.Charge}" Value="Medium">
                                                        <Setter Property="Content" Value="{DynamicResource BatteryStatusMedium}" />
                                                    </DataTrigger>
                                                    <DataTrigger Binding="{Binding PowerStatus.Charge}" Value="High">
                                                        <Setter Property="Content" Value="{DynamicResource BatteryStatusHigh}" />
                                                    </DataTrigger>
                                                    <DataTrigger Binding="{Binding PowerStatus.IsCharging}" Value="True">
                                                        <Setter Property="Content" Value="{DynamicResource BatteryStatusCharging}" />
                                                    </DataTrigger>
                                                </Style.Triggers>
                                            </Style>
                                        </ContentControl.Style>
                                    </ContentControl>

                                    <!-- Battery Percentage -->
                                    <TextBlock x:Name="PART_TextBatteryPercentage" 
                                               Style="{DynamicResource TextBlockBaseStyle}"
                                               FontSize="16"
                                               VerticalAlignment="Center" 
                                               Margin="0,0,10,0"/>

                                    <!-- Clock -->
                                    <TextBlock x:Name="PART_TextClock" 
                                               Style="{DynamicResource TextBlockBaseStyle}"
                                               FontSize="18" FontWeight="SemiBold"
                                               VerticalAlignment="Center" 
                                               Margin="5,0,10,0"/>

                                    <!-- Program Update Button (hidden) -->
                                    <ButtonEx x:Name="PART_ButtonProgramUpdate" 
                                              Visibility="Collapsed"/>

                                    <!-- Notifications -->
                                    <ButtonEx x:Name="PART_ButtonNotifications" 
                                              VerticalAlignment="Center"
                                              Margin="5,0,5,0" Height="36" MinWidth="36">
                                        <Button.Content>
                                            <Grid>
                                                <TextBlock Text="&#xeea3;" FontFamily="{StaticResource FontIcoFont}"
                                                           Foreground="{DynamicResource TextBrush}" FontSize="22" />
                                                <Ellipse Width="8" Height="8" Fill="{DynamicResource GlyphBrush}"
                                                         HorizontalAlignment="Right" VerticalAlignment="Bottom"
                                                         Margin="0,0,2,0" />
                                            </Grid>
                                        </Button.Content>
                                        <Button.Style>
                                            <Style TargetType="Button" BasedOn="{StaticResource ButtonTopMenu}">
                                                <Style.Triggers>
                                                    <DataTrigger Binding="{Api Notifications.Count}" Value="0">
                                                        <Setter Property="Visibility" Value="Collapsed"/>
                                                    </DataTrigger>
                                                </Style.Triggers>
                                            </Style>
                                        </Button.Style>
                                    </ButtonEx>

                                    <!-- Main Menu / User Avatar -->
                                    <ButtonEx x:Name="PART_ButtonMainMenu" 
                                              VerticalAlignment="Center"
                                              Style="{DynamicResource ButtonTopMenu}"
                                              Margin="5,0,5,0" Height="40" Width="40">
                                        <Button.Content>
                                            <Image RenderOptions.BitmapScalingMode="Fant"
                                                   Source="{ThemeFile 'Images/applogo_clean.png'}" />
                                        </Button.Content>
                                    </ButtonEx>

                                    <!-- R1 Bumper Indicator -->
                                    <Border Background="{DynamicResource ControlBackgroundBrush}"
                                            CornerRadius="8" Margin="10,0,0,0"
                                            VerticalAlignment="Center"
                                            Padding="10,5">
                                        <TextBlock Text="RB" FontSize="15" FontWeight="Bold"
                                                   Foreground="{DynamicResource TextBrush}"
                                                   VerticalAlignment="Center"/>
                                    </Border>
                                </StackPanel>
                            </Grid>


                            <!-- ==================== GAME GRID ==================== -->
                            <DockPanel Grid.Row="1">
                                <Filters x:Name="PART_ElemFilters"
                                         DockPanel.Dock="Left" Focusable="False" />

                                <FiltersAdditional x:Name="PART_ElemFiltersAdditional"
                                                   DockPanel.Dock="Left" Focusable="False" />

                                <ContentControl x:Name="PART_ContentFilterItems"
                                                DockPanel.Dock="Left" Focusable="False" />

                                <!-- Game List with tighter margins -->
                                <ListBoxEx x:Name="PART_ListGameItems" 
                                           Margin="15,10,15,10"
                                           Background="Transparent" 
                                           BorderThickness="0"
                                           DockPanel.Dock="Right"
                                           KeyboardNavigation.DirectionalNavigation="Once" />
                            </DockPanel>

                            <!-- No Games Found -->
                            <TextBlock Grid.Row="1" FontSize="32"
                                       Text="{DynamicResource LOCNoGamesFound}"
                                       Foreground="{DynamicResource TextBrushDark}"
                                       TextAlignment="Center" HorizontalAlignment="Center" VerticalAlignment="Center">
                                <TextBlock.Style>
                                    <Style TargetType="TextBlock" BasedOn="{StaticResource TextBlockBaseStyle}">
                                        <Setter Property="Visibility" Value="Collapsed" />
                                        <Style.Triggers>
                                            <DataTrigger Binding="{Binding Items.Count, ElementName=PART_ListGameItems}" Value="0">
                                                <Setter Property="Visibility" Value="Visible" />
                                            </DataTrigger>
                                        </Style.Triggers>
                                    </Style>
                                </TextBlock.Style>
                            </TextBlock>

                            <!-- ==================== STEAMDECK FOOTER ==================== -->
                            <Grid Grid.Row="2" Background="{DynamicResource BottomBarBackgroundBrush}">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="Auto" />  <!-- STEAM MENU -->
                                    <ColumnDefinition Width="*" />     <!-- Center hints -->
                                    <ColumnDefinition Width="Auto" />  <!-- Right hints -->
                                </Grid.ColumnDefinitions>

                                <!-- Left side spacer -->
                                <StackPanel Grid.Column="0" Orientation="Horizontal" 
                                            VerticalAlignment="Center" Margin="20,0,0,0">
                                </StackPanel>

                                <!-- Center - Filter/Sort hints -->
                                <StackPanel Grid.Column="1" Orientation="Horizontal" 
                                            VerticalAlignment="Center" HorizontalAlignment="Center">
                                    <!-- Filter button placeholder -->
                                    <ButtonEx x:Name="PART_ButtonFilter"
                                              Style="{DynamicResource ButtonBottomMenu}"
                                              Visibility="Collapsed"/>
                                    
                                    <!-- Search Active Info -->
                                    <StackPanel x:Name="PART_ElemSearchActive"
                                                Orientation="Horizontal" VerticalAlignment="Center">
                                        <TextBlock Style="{DynamicResource TextBlockBaseStyle}"
                                                   FontSize="14"
                                                   Text="{DynamicResource LOCGameListSearchResults}"/>
                                    </StackPanel>

                                    <TextBlock x:Name="PART_ElemExtraFilterActive"
                                               FontSize="14"
                                               VerticalAlignment="Center"
                                               Foreground="{DynamicResource GlyphBrush}"
                                               Style="{DynamicResource TextBlockBaseStyle}"
                                               Text="{DynamicResource LOCGameListExtraFiltered}"/>

                                    <!-- Progress Indicator -->
                                    <StackPanel x:Name="PART_ElemProgressIndicator" 
                                                Orientation="Horizontal" VerticalAlignment="Center">
                                        <TextBlock x:Name="PART_TextProgressTooltip" 
                                                   Margin="0,0,10,0" FontSize="14" 
                                                   VerticalAlignment="Center"
                                                   Style="{DynamicResource TextBlockBaseStyle}"/>
                                        <ContentControl Style="{DynamicResource ProgressIndicator}" 
                                                        Focusable="False"
                                                        Height="24" Width="24" 
                                                        VerticalAlignment="Center" />
                                    </StackPanel>
                                </StackPanel>

                                <!-- Right - Controller hints (A/B) -->
                                <StackPanel Grid.Column="2" Orientation="Horizontal" 
                                            VerticalAlignment="Center" Margin="0,0,20,0">
                                    <!-- Install button (hidden) -->
                                    <ButtonEx x:Name="PART_ButtonInstall"
                                              Style="{DynamicResource ButtonBottomMenu}"
                                              Visibility="Collapsed"
                                              Content="{DynamicResource LOCInstallGame}" />
                                    <!-- Play button (hidden) -->
                                    <ButtonEx x:Name="PART_ButtonPlay"
                                              Style="{DynamicResource ButtonBottomMenu}"
                                              Visibility="Collapsed"
                                              Content="{DynamicResource LOCPlayGame}" />
                                    <!-- Details button (hidden) -->
                                    <ButtonEx x:Name="PART_ButtonDetails"
                                              Style="{DynamicResource ButtonBottomMenu}"
                                              Visibility="Collapsed"
                                              Content="{DynamicResource LOCGameDetails}" />
                                    <!-- Options button (hidden) -->
                                    <ButtonEx x:Name="PART_ButtonGameOptions"
                                              Style="{DynamicResource ButtonBottomMenu}"
                                              Visibility="Collapsed"
                                              Content="{DynamicResource LOCGameOptions}" />
                                    
                                    <!-- A - SELECT -->
                                    <StackPanel Orientation="Horizontal" Margin="15,0,0,0">
                                        <Border Background="#4CAF50" CornerRadius="12" 
                                                Width="24" Height="24" Margin="0,0,6,0">
                                            <TextBlock Text="A" FontSize="12" FontWeight="Bold"
                                                       Foreground="White" 
                                                       HorizontalAlignment="Center" 
                                                       VerticalAlignment="Center"/>
                                        </Border>
                                        <TextBlock Text="SELECT" FontSize="13" 
                                                   Foreground="{DynamicResource TextBrush}"
                                                   VerticalAlignment="Center"/>
                                    </StackPanel>
                                    
                                    <!-- B - BACK -->
                                    <StackPanel Orientation="Horizontal" Margin="20,0,0,0">
                                        <Border Background="#f44336" CornerRadius="12" 
                                                Width="24" Height="24" Margin="0,0,6,0">
                                            <TextBlock Text="B" FontSize="12" FontWeight="Bold"
                                                       Foreground="White" 
                                                       HorizontalAlignment="Center" 
                                                       VerticalAlignment="Center"/>
                                        </Border>
                                        <TextBlock Text="BACK" FontSize="13" 
                                                   Foreground="{DynamicResource TextBrush}"
                                                   VerticalAlignment="Center"/>
                                    </StackPanel>
                                </StackPanel>
                            </Grid>
                        </Grid>

                        <GameDetails x:Name="PART_ElemGameDetails" Grid.RowSpan="3"
                                     HorizontalAlignment="Stretch" VerticalAlignment="Stretch"/>

                        <GameStatus x:Name="PART_ElemGameStatus" Grid.RowSpan="3"
                                    HorizontalAlignment="Stretch" VerticalAlignment="Stretch"/>
                    </Grid>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>
</ResourceDictionary>